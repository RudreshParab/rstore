<%= link_to t('.back'), products_path %>
<h1><%= @product.name %></h1>
<section class="product">
    <%= image_tag @product.featured_image if @product.featured_image.attached? %></br>
    <b><%= @product.name %></b>
    <section class="product-info">
        <%= @product.price %>
        <%= @product.description %>
        <div class="inventory">
            <%= render 'inventory', product: @product %>
        </div>
        <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure want to remove this product?" } %>
    </section>
</section>
