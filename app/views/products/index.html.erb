<h1><%= t('.title') %></h1>

<div id="products">
    <% @products.each do |product| %>
        <div>
            <%= product.name %></br>
            <%= product.price %>
            <%= link_to t('.show'), product %>
            <%= link_to t('.edit'), edit_product_path(product) %>
        </div>
    <% end %>
</div>

<div>
    <%= link_to t('.add'), new_product_path %>
</div>
